{
    "include": [
        "packages/*/src/**/*"
    ],
    "exclude": [
        "packages/*/dist/**/*",
        "node_modules",
    ],
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "declaration": true,
        "sourceMap": true
    },
}